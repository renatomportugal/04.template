mixin c(radius)
  g(style=`transform-box:view-box;transform-origin:${radius}px center`)
    circle.c(cx=radius cy=50 r=radius stroke-dasharray=`${rad} 1`)
    animateTransform(attributeName='transform' type='rotate' values='0;360' dur=radius/50*10 repeatCount='indefinite')
    block

mixin all()
  - i = 50
  +c(i)
    +c(i/=2) 
      +c(i/=2)
        +c(i/=2)
          +c(i/=2)
            +c(i/=2)

svg(viewbox='0 0 100 100')
  g(transform='scale(0.9)' style='transform-origin:50%')
    +all()