div(class="board")
	- let i = 0;
	while i < 80
		input(type="checkbox" class="checkbox")
		span(class="counter checked")
		span(class="counter unchecked")
		span(class="counter focused")
		span(class="counter hovered")
		span(class="counter first-checked")
		span(class="counter first-unchecked")
		span(class="counter second-checked")
		span(class="counter second-unchecked")
		- i++
	br/
	div(class="info_container")
		div(class="title") Info
		div(class="info")